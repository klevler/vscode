{
    "editor.cursorBlinking": "solid",
    "editor.lineHeight": 16.8,
    "editor.fontFamily": "'DeJaVu Sans Mono', 'Droid Sans Mono', 'Fira Code', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.selectionHighlight": false,
    "editor.renderLineHighlight": "all",
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "boundary",

    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true
    },

    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true
    },

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    "workbench.colorTheme": "Freya",
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.welcome.enabled": false,

    "window.title": "${activeEditorLong}",
    "window.zoomLevel": 0,

    "go.buildOnSave": true,
    "go.lintOnSave": true,
    "go.vetOnSave": true,
    "go.buildTags": "",
    "go.buildFlags": [],
    "go.lintTool": "golint",
    "go.lintFlags": [],
    "go.vetFlags": [],
    "go.coverOnSave": false,
    "go.useCodeSnippetsOnFunctionSuggest": false,
    "go.formatOnSave": true, 
    "go.formatTool": "goreturns",
    "go.formatFlags": [],
    "go.goroot": "/home/gary/Applications/go",
    "go.gopath": "/media/Data/Projects/Go",
    "go.gocodeAutoBuild": false,

    "python.pythonPath": "python3",

    "vim.autoindent": true,
    "vim.easymotion": false,
    "vim.history": 50,
    "vim.hlsearch": true,
    "vim.ignorecase": true,
    "vim.incsearch": true,
    "vim.iskeyword": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "vim.leader": "\\",
    "vim.scroll": 20,
    "vim.searchHighlightColor": "rgba(41, 94, 142, 1.0)",
    "vim.showcmd": true,
    "vim.smartcase": true,
    "vim.startInInsertMode": false,
    "vim.textwidth": 80,
    "vim.timeout": 1000,
    "vim.useCtrlKeys": true,
    "vim.useSolidBlockCursor": false,
    "vim.useSystemClipboard": false,
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["leader", "q"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeWindow",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "w"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        },
        {
            "before": ["<C-a>"],
            "after": ["/", "h", "@", "c", "k", "\n"]
        }
    ]
}
