{
    "breadcrumbs.enabled": false,

    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.autoSurround": "never",
    "editor.codeLens": false,
    "editor.cursorBlinking": "solid",
    "editor.dragAndDrop": false,
    "editor.folding": false,
    "editor.fontFamily": "'PragmataPro', 'DeJaVu Sans Mono', 'Droid Sans Mono', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.hideCursorInOverviewRuler": true,
    "editor.hover.delay": 1200,
    "editor.lightbulb.enabled": false,
    "editor.lineHeight": 18,
    "editor.minimap.enabled": false,
    "editor.occurrencesHighlight": false,
    "editor.parameterHints.cycle": false,
    "editor.parameterHints.enabled": false,
    "editor.renderIndentGuides": false,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.selectionHighlight": false,
    "editor.snippetSuggestions": "top",
    "editor.tabCompletion": "off",
    "editor.wordWrap": "on",

    "explorer.confirmDelete": false,
    "explorer.decorations.badges": false,
    "explorer.decorations.colors": false,
    "explorer.openEditors.visible": 0,

    "extensions.showRecommendationsOnlyOnDemand": true,

    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
    },

    "scm.diffDecorations": "none",

    "search.exclude": {
        "**/bower_components": true,
        "**/node_modules": true
    },

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    "window.title": "${activeEditorLong}",
    "window.titleBarStyle": "native",
    "window.zoomLevel": 0,

    "workbench.colorTheme": "Freya",
    "workbench.editor.enablePreview": false,
    "workbench.editor.focusRecentEditorAfterClose": false,
    "workbench.editor.restoreViewState": false,
    "workbench.enableExperiments": false,
    "workbench.iconTheme": "file-icons",
    "workbench.list.keyboardNavigation":"simple",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.startupEditor": "none",
    "workbench.tree.indent": 24,
    "workbench.tree.renderIndentGuides":"none",

    "go.formatTool": "goimports",
    "go.gocodeAutoBuild": false,
    "go.gopath": "/media/Data/Projects/Go",
    "go.goroot": "/home/gary/Applications/go",
    "go.useCodeSnippetsOnFunctionSuggest": true,
    "go.useCodeSnippetsOnFunctionSuggestWithoutType": true,

    "php.executablePath": "/usr/bin/php",
    "php.suggest.basic": false,
    "php.validate.executablePath": "/usr/bin/php",

    "vim.hlsearch": true,
    "vim.leader": "\\",
    "vim.searchHighlightColor": "rgba(41, 94, 142, 1.0)",
    "vim.useCtrlKeys": false,
    "vim.whichwrap": "b,s,<,>,h,l,[,]",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["leader", "r", "c"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.openGlobalSettings",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "k", "r", "c"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.openGlobalKeybindings",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "q"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeWindow",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "w"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        },
        {
            "before": ["*"],
            "after": [],
            "commands": [
                {
                    "command": "actions.find",
                    "args": []
                }
            ]
        },
        {
            "before": ["#"],
            "after": [],
            "commands": [
                {
                    "command": "actions.find",
                    "args": []
                }
            ]
        },
        {
            "before": ["/"],
            "after": [],
            "commands": [
                {
                    "command": "actions.find",
                    "args": []
                }
            ]
        },
        {
            "before": ["g", "c"],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.commentLine",
                    "args": []
                }
            ]
        },
        {
            "before": ["u"],
            "after": [],
            "commands": [
                {
                    "command": "undo",
                    "args": []
                }
            ]
        }
    ]
}
