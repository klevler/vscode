{
    "editor.autoClosingBrackets": false,
    "editor.cursorBlinking": "solid",
    "editor.dragAndDrop": false,
    "editor.folding": false,
    "editor.fontFamily": "'DeJaVu Sans Mono', 'Droid Sans Mono', 'Fira Code', 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.lineHeight": 16.8,
    "editor.minimap.enabled": false,
    "editor.renderIndentGuides": false,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.selectionHighlight": false,
    "editor.occurrencesHighlight": false,
    "editor.snippetSuggestions": "top",
    "editor.tabCompletion": false,
    "editor.wordWrap": "on",

    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true
    },

    "search.exclude": {
        "**/bower_components": true,
        "**/node_modules": true
    },

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    "window.title": "${activeEditorLong}",
    "window.zoomLevel": 0,

    "workbench.colorTheme": "Freya",
    "workbench.editor.enablePreview": false,
    "workbench.iconTheme": "file-icons",
    "workbench.startupEditor": "none",
    "workbench.colorCustomizations": {
        "statusBar.foreground": "#999999",
        "statusBar.background": "#333333",
        "peekViewEditor.background": "#1F1F1F",
        "peekView.border": "#595959",
        "peekViewEditor.matchHighlightBackground": "#295E8E"
    },

    "go.gocodeAutoBuild": false,
    "go.gopath": "/media/Data/Projects/Go",
    "go.goroot": "/home/gary/Applications/go",

    "python.linting.enabled": false,
    "python.pythonPath": "python3",

    "vim.hlsearch": true,
    "vim.leader": "\\",
    "vim.searchHighlightColor": "rgba(41, 94, 142, 1.0)",
    "vim.useCtrlKeys": false,
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["leader", "r", "c"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.openGlobalSettings",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "k", "r", "c"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.openGlobalKeybindings",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "q"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeWindow",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "w"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        },
        {
            "before": ["*"],
            "after": [],
            "commands": [
                {
                    "command": "actions.find",
                    "args": []
                }
            ]
        },
        {
            "before": ["#"],
            "after": [],
            "commands": [
                {
                    "command": "actions.find",
                    "args": []
                }
            ]
        },
        {
            "before": ["/"],
            "after": [],
            "commands": [
                {
                    "command": "actions.find",
                    "args": []
                }
            ]
        },
        {
            "before": ["g", "c"],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.commentLine",
                    "args": []
                }
            ]
        },
        {
            "before": ["u"],
            "after": [],
            "commands": [
                {
                    "command": "undo",
                    "args": []
                }
            ]
        }
    ],
    "vim.disableAnnoyingNeovimMessage": true
}
