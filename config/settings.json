{
    "editor.cursorBlinking": "solid",
    "editor.fontFamily": "'DeJaVu Sans Mono', 'Droid Sans Mono', 'Fira Code', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.lineHeight": 16.8,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.selectionHighlight": false,
    "editor.snippetSuggestions": "top",
    "editor.tabCompletion": false,
    "editor.wordWrap": "on",

    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true
    },

    "search.exclude": {
        "**/bower_components": true,
        "**/node_modules": true
    },

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    "workbench.colorTheme": "Freya",
    "workbench.iconTheme": "file-icons",
    "workbench.welcome.enabled": false,

    "window.title": "${activeEditorLong}",
    "window.zoomLevel": 0,

    "go.buildFlags": [],
    "go.buildOnSave": true,
    "go.buildTags": "",
    "go.coverOnSave": false,
    "go.formatFlags": [],
    "go.formatOnSave": true,
    "go.formatTool": "goreturns",
    "go.gocodeAutoBuild": false,
    "go.gopath": "/media/Data/Projects/Go",
    "go.goroot": "/home/gary/Applications/go",
    "go.lintFlags": [],
    "go.lintOnSave": true,
    "go.lintTool": "golint",
    "go.useCodeSnippetsOnFunctionSuggest": false,
    "go.vetFlags": [],
    "go.vetOnSave": true,

    "php.suggest.basic": false,
    "php.validate.enable": true,
    "php.validate.executablePath": null,
    "php.validate.run": "onSave",

    "python.pythonPath": "python3",

    "vim.autoindent": true,
    "vim.easymotion": false,
    "vim.history": 50,
    "vim.hlsearch": true,
    "vim.ignorecase": true,
    "vim.incsearch": true,
    "vim.iskeyword": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "vim.leader": "\\",
    "vim.scroll": 20,
    "vim.searchHighlightColor": "rgba(41, 94, 142, 1.0)",
    "vim.showcmd": true,
    "vim.smartcase": true,
    "vim.startInInsertMode": false,
    "vim.textwidth": 80,
    "vim.timeout": 1000,
    "vim.useCtrlKeys": false,
    "vim.useSolidBlockCursor": false,
    "vim.useSystemClipboard": false,
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["leader", "r", "c"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.openGlobalSettings",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "k", "r", "c"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.openGlobalKeybindings",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "q"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeWindow",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "w"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        },
        {
            "before": ["*"],
            "after": [],
            "commands": [
                {
                    "command": "actions.find",
                    "args": []
                }
            ]
        },
        {
            "before": ["#"],
            "after": [],
            "commands": [
                {
                    "command": "actions.find",
                    "args": []
                }
            ]
        },
        {
            "before": ["/"],
            "after": [],
            "commands": [
                {
                    "command": "actions.find",
                    "args": []
                }
            ]
        }
    ]
}
